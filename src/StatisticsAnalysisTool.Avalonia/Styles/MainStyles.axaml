    <Style Selector="TextBox">
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}" />
        <Setter Property="Background" Value="{StaticResource SolidColorBrush.Background.7}" />
        <Setter Property="BorderBrush" Value="{StaticResource SolidColorBrush.Text.5}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="TabControl">
        <Setter Property="Background" Value="{StaticResource SolidColorBrush.Background.1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource SolidColorBrush.Background.3}"/>
        <Setter Property="BorderThickness" Value="1,0,1,0"/>
    </Style>

    <!--<Style Selector="TabItem">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="{StaticResource SolidColorBrush.Background.3}"
                        CornerRadius="0" Margin="2,0,0,0">
                    <ContentPresenter x:Name="ContentSite"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Content="{TemplateBinding Header}"
                                      Margin="15,2" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>-->

    <Style Selector="Border.containerBorder">
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="BorderBrush" Value="{StaticResource SolidColorBrush.Background.4}" />
    </Style>

    <Style Selector="ListBox">
        <Setter Property="SelectionMode" Value="Multiple" />
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}" />
        <Setter Property="Background" Value="{StaticResource SolidColorBrush.Background.1}" />
        <Setter Property="BorderBrush" Value="{StaticResource SolidColorBrush.Background.3}" />
    </Style>

    <Style Selector="ScrollBar">
        <Setter Property="Width" Value="15" />
        <Setter Property="AllowAutoHide" Value="False" />
        
        <Style Selector="^:vertical">
            <Style Selector="^ Rectangle">
                <Setter Property="Fill" Value="{StaticResource SolidColorBrush.Background.3}" />
            </Style>
            <Style Selector="^ Thumb">
                <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}" />
                <Style Selector="^:pointerover /template/ Border">
                    <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}" />
                </Style>
                <Style Selector="^:pressed /template/ Border">
                    <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}" />
                </Style>
            </Style>
            <Style Selector="^ RepeatButton">
                <Setter Property="Opacity" Value="0" />
                <Setter Property="Height" Value="0" />
            </Style>
        </Style>
        
        <Style Selector="^:horizontal">
            <Style Selector="^ Rectangle">
                <Setter Property="Fill" Value="{StaticResource SolidColorBrush.Background.3}" />
            </Style>
            <Style Selector="^ Thumb">
                <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}" />
                <Style Selector="^:pointerover /template/ Border">
                    <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}" />
                </Style>
                <Style Selector="^:pressed /template/ Border">
                    <Setter Property="Background" Value="{StaticResource SolidColorBrush.Accent.Blue.4}" />
                </Style>
            </Style>
            <Style Selector="^ RepeatButton">
                <Setter Property="Opacity" Value="0" />
                <Setter Property="Width" Value="0" />
            </Style>
        </Style>
    </Style>

    <Style Selector="TextBlock.textTitle1">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Accent.Blue.3}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
</Styles>
